<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[@Name="TreeBase"]</xpath>
    <value>
      <li Class="Discoveries.UnlockResearchOnDiscovery">
        <researchProject>TreeSowing</researchProject>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="SteamGeyser"]</xpath>
    <value>
      <li Class="Discoveries.UnlockResearchOnDiscovery">
        <researchProject>GeothermalPower</researchProject>
      </li>
    </value>
  </Operation>


  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Door"]</xpath>
    <value>
      <li Class="Discoveries.UnlockResearchOnDiscovery">
        <researchProject>Autodoors</researchProject>
      </li>
    </value>
  </Operation>


  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Furniture Expanded</li>
    </mods>

    <!-- VFE is loaded: require GMR too -->
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Generally More Research</li>
      </mods>
      <match Class="PatchOperationSequence">
        <operations>

          <li Class="PatchOperationAddModExtension">
            <xpath>Defs/ThingDef[defName="TubeTelevision"]</xpath>
            <value>
              <li Class="Discoveries.UnlockResearchOnDiscovery">
                <researchProject>FlatscreenTelevision</researchProject>
              </li>
            </value>
          </li>

        </operations>
      </match>
    </match>

    <!-- VFE is NOT loaded: so run -->
    <nomatch Class="PatchOperationSequence">
      <operations>

        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="TubeTelevision"]</xpath>
          <value>
            <li Class="Discoveries.UnlockResearchOnDiscovery">
              <researchProject>FlatscreenTelevision</researchProject>
            </li>
          </value>
        </li>

      </operations>
    </nomatch>

  </Operation>



